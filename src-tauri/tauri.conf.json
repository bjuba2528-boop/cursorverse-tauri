{
  "productName": "CursorVerse",
  "version": "1.5.0",
  "identifier": "com.cursorverse.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "CursorVerse - DEBUG",
        "width": 1600,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["main"],
          "permissions": [
            "updater:default",
            "shell:default",
            "dialog:default",
            "dialog:allow-open",
            "dialog:allow-save",
            "core:event:default",
            "core:event:allow-listen",
            "core:event:allow-emit",
            "core:window:default",
            "core:window:allow-create",
            "core:window:allow-close",
            "core:window:allow-show",
            "core:window:allow-hide",
            "core:window:allow-set-position",
            "core:window:allow-set-size",
            "core:window:allow-set-focus",
            "core:webview:default",
            "core:webview:allow-create-webview-window",
            "core:webview:allow-webview-position",
            "core:webview:allow-webview-size",
            "core:path:default",
            "core:app:default",
            "core:app:allow-app-hide",
            "core:app:allow-app-show"
          ]
        },
        {
          "identifier": "pet-window-capability",
          "windows": ["pet_*"],
          "permissions": [
            "core:window:default",
            "core:window:allow-set-position",
            "core:window:allow-set-size",
            "core:window:allow-close",
            "core:webview:default"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/CursorVerse.ico"
    ],
    "category": "DeveloperTool"
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/ShustovCarleone/Cursor-Galaxy/releases/latest/download/latest.json"
      ],
      "dialog": false,
      "pubkey": ""
    }
  }
}
