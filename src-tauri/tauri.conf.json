{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "CursorVerse",
  "version": "1.6.0",
  "identifier": "com.cursorverse.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Utility"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "CursorVerse",
        "width": 1600,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "transparent": false
      },
      {
        "label": "lucy_background",
        "url": "index.html?background=1",
        "title": "Lucy Background",
        "width": 10,
        "height": 10,
        "resizable": false,
        "fullscreen": false,
        "center": false,
        "decorations": false,
        "transparent": true,
        "visible": false,
        "alwaysOnTop": false,
        "focus": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' https://api.openai.com https://generativelanguage.googleapis.com; media-src 'self' mediastream: blob:; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:",
      "capabilities": [
        {
          "identifier": "main-capability",
          "windows": ["main"],
          "permissions": [
            "updater:default",
            "shell:default",
            "shell:allow-execute",
            "dialog:default",
            "dialog:allow-open",
            "dialog:allow-save",
            "core:event:default",
            "core:event:allow-listen",
            "core:event:allow-emit",
            "core:window:default",
            "core:window:allow-create",
            "core:window:allow-close",
            "core:window:allow-show",
            "core:window:allow-hide",
            "core:window:allow-set-position",
            "core:window:allow-set-size",
            "core:window:allow-set-focus",
            "core:webview:default",
            "core:webview:allow-create-webview-window",
            "core:webview:allow-webview-position",
            "core:webview:allow-webview-size",
            "core:path:default",
            "core:app:default",
            "core:app:allow-app-hide",
            "core:app:allow-app-show"
          ]
        },
        {
          "identifier": "pet-window-capability",
          "windows": ["dpet-*"],
          "permissions": [
            "core:window:default",
            "core:window:allow-set-position",
            "core:window:allow-set-size",
            "core:window:allow-close",
            "core:window:allow-outer-position",
            "core:window:allow-outer-size",
            "core:webview:default",
            "core:path:default",
            "core:path:allow-resolve"
          ]
        }
      ]
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/ShustovCarleone/Cursor-Galaxy/releases/latest/download/latest.json"
      ],
      "dialog": false,
      "pubkey": ""
    }
  }
}
